<%# there should not be a space between include and ("header") %>
<%- include("partials/header"); -%>

      <h1>HOME</h1>
      <p> <%= startingContent %> </p>

      <%# instead of for loop, "foreach" can be used for better practice %>
      <% posts.forEach (function (post){ %>
      <h1> <%= post.title %> </h1>
      <p>
        <%= post.content.substring(0, 100) + " ..." %>
        <a href="/posts/<%= post.title%>">Read More</a> 
      </p>
      <% }); %>




<%# there should not be a space between include and ("footer") %>
<%- include("partials/footer"); -%>
